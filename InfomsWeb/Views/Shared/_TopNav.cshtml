    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-item nav-link" })
            </li>
            <li class="nav-item">
                @{
                    if (Request.IsAuthenticated)
                    {
                        @Html.ActionLink("Roles", "Index", "Role", null, new { @class = "nav-item nav-link" })
                    }
                }

            </li>
            <li class="nav-item">
                @{
                    if (Request.IsAuthenticated)
                    {
                        @Html.ActionLink("Modules", "Index", "Module", null, new { @class = "nav-item nav-link" })
                    }
                }
            </li>
        </ul>

        Welcome @Html.Action("GetFullname","Home") !
        &nbsp;&nbsp;&nbsp;

        @{
            if (Request.IsAuthenticated)
            {
                using (Html.BeginForm("Logout", "Home", FormMethod.Post, new { id = "logoutForm" }))
                {
                    <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-outline-primary">Logout</a>
                }
            }
            else
            {
                @Html.ActionLink("Login", "Index", "Home", null, new { @class = "btn btn-outline-success my-2 my-sm-0" })
            }
        }
    </div>
</nav>