@model InfomsWeb.Models.RoleRPS

@{
    ViewBag.Title = "Create New Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink("Home", "Index", "Home")</li>
        <li class="breadcrumb-item">@Html.ActionLink("Roles", "Index", "Role")</li>
        <li class="breadcrumb-item active" aria-current="page">Create</li>
    </ol>
</nav>
<p>
    &nbsp;
</p>
<div class="row">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">@ViewBag.Title</h5>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Create", "Role", FormMethod.Post, new { @class = "form", role = "form", autocomplete = "off" }))
                {
                    @Html.AntiForgeryToken()
                    <span class="text-success">@ViewBag.Message</span>
                    <div class="form-group row">
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = ViewBag.Labelcss })
                        <div class="col-lg-9">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label form-control-label"></label>
                        <div class="col-lg-9">
                            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-info" })
                            <input type="submit" value="Create New" class="btn btn-primary" formmethod="post" />
                        </div>
                    </div>
                }
            </div>
        </div>
        <!-- /form user info -->
    </div>
</div>
