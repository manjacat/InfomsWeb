@model InfomsWeb.Models.RoleRPS

@{
    ViewBag.Title = "Edit Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink("Home", "Index", "Home")</li>
        <li class="breadcrumb-item">@Html.ActionLink("Roles", "Index", "Role")</li>
        <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
    </ol>
</nav>
<p>
    &nbsp;
</p>
<div class="row">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">@ViewBag.Title</h5>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Edit", "Role", FormMethod.Post, new { @class = "form", role = "form", autocomplete = "off" }))
                {
                    @Html.AntiForgeryToken()
                    <span class="text-success">@ViewBag.Message</span>
                    <div class="form-group row">
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ID)
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = ViewBag.Labelcss })
                        <div class="col-lg-9">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = ViewBag.Labelcss })
                        <div class="col-lg-9 checkbox">
                            <!-- //TODO -->
                            @Html.CheckBoxFor(model => model.IsActive, new { @class = "checkbox"})
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-offset-2 col-md-10">
                            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-info" })
                            <input type="submit" value="Update Role" class="btn btn-success" />
                            @Html.ActionLink("Edit Modules", "Edit", "RoleModule", new { id = Model.ID }, new { @class = "btn btn-primary" }) 
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

